//Задача 34: Задайте массив заполненный случайными положительными трёхзначными числами. Напишите программу, которая покажет количество чётных чисел в массиве.

//[345, 897, 568, 234] -> 2

internal class Program
{
    private static void Main(string[] args)
    {
        Console.Write("Enter a size of the array: ");
        try
        {
            int size = int.Parse(Console.ReadLine());
            var array = new int[size];

            var random = new Random();
            int j = 0;
            for (int i = 0; i < array.Length; i++)
            {
                array[i] = random.Next(100, 1000);
                if (array[i] % 2 == 0)
                {
                    j++;
                }

            }
            Console.WriteLine("[{0}]", string.Join(", ", array));
            Console.Write(j);      
        }

        catch
        { 
            Console.WriteLine("you have entered incorrect data");
        }
    }
}


//Задача 36: Задайте одномерный массив, заполненный случайными числами. Найдите сумму элементов, стоящих на нечётных позициях.

//[3, 7, 23, 12] -> 19
//[-4, -6, 89, 6] -> 0

internal class Program
{
    private static void Main(string[] args)
    {
        Console.Write("Enter a size of the array: ");
        try
        {
            int size = int.Parse(Console.ReadLine());
            var array = new int[size];

            var random = new Random();
            int summ = 0;
            for (int i = 0; i < array.Length; i++)
            {
                array[i] = random.Next();
                if (i % 2 == 0)
                {
                    summ = summ + array[i];
                }

            }
            Console.WriteLine("[{0}]", string.Join(", ", array));
            Console.Write(summ);      
        }

        catch
        { 
            Console.WriteLine("you have entered incorrect data");
        }
    }
}

//Задача 37: Найдите произведение пар чисел в одномерном массиве. Парой считаем первый и последний элемент, второй и предпоследний и т.д. Результат запишите в новом массиве.
//[1 2 3 4 5] -> 5 8 3
//[6 7 3 6] -> 36 21

internal class Program
{
    private static void Main(string[] args)
    {
        Console.Write("Enter a size of the array: ");
        try
        {
            int size = int.Parse(Console.ReadLine());
            int size2 = 0;
            var array = new int[size];
            var array2 = new int[0];
            var random = new Random();
            int sizeS = 0;

            for (int i = 0; i < array.Length; i++)
            {
                array[i] = random.Next(1, 10);
            }

            if (size % 2 == 0)
                {
                    size2 = size / 2;
                    array2 = new int[size2];
                    for (int i = 0; i < size2; i++)
                    {
                        array2[i] = array[i] * array[size - 1 - i];
                    }
                }
            else
                {
                    size2 = (size / 2 + 1);
                    array2 = new int[size2];
                    for (int i = 0; i < (size2 - 1); i++)
                    {
                        array2[i] = array[i] * array[size - 1 - i];
                    }
                    array2[size2 - 1] = array[size2 - 1];
                }


            Console.WriteLine("[{0}]", string.Join(", ", array));
            Console.WriteLine("[{0}]", string.Join(", ", array2));
     
        }

        catch
        { 
            Console.WriteLine("you have entered incorrect data");
        }
    }
}
